{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Alkitab API",
        "description": "Simple and easy-to-use Alkitab API"
    },
    "tags": [
        {
            "name": "Read",
            "description": "Read the bible based on defined book and chapter"
        },
        {
            "name": "Find",
            "description": "Find the chapter data"
        }
    ],
    "schemes": [
        "http"
    ],
    "paths": {
        "/read/{book}/{chapter}/{version}": {
            "get": {
                "tags": [
                    "Read"
                ],
                "description": "Read the bible in Bahasa Indonesia",
                "parameters": [
                    {
                        "name": "book",
                        "in": "path",
                        "description": "The specific book",
                        "type": "string",
                        "required": true
                    },
                    {
                        "name": "chapter",
                        "in": "path",
                        "description": "Chapter",
                        "type": "number",
                        "required": true
                    },
                    {
                        "name": "version",
                        "in": "path",
                        "description": "Book Version",
                        "type": "string",
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Result"
                    }
                }
            }
        },
        "/find/{book}": {
            "get": {
                "tags": [
                    "Find"
                ],
                "description": "Find the book data",
                "parameters": [
                    {
                        "name": "book",
                        "in": "path",
                        "description": "The specific book",
                        "type": "string",
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Detailed Book Data"
                    },
                    "500": {
                        "description": "Error! Please check your input"
                    }
                }
            }
        }
    }
}