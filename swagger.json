{
    "swagger": "2.0",
    "info": {
        "version": "1.0.2",
        "title": "Alkitab API",
        "description": "API Documentation"
    },
    "tags": [
        {
            "name": "Read",
            "description": "Read the bible based on defined book and chapter"
        },
        {
            "name": "Find",
            "description": "Find the chapter data"
        }
    ],
    "schemes": [
        "http"
    ],
    "paths": {
        "/read/{book}/{chapter}/{version}": {
            "get": {
                "tags": [
                    "Read"
                ],
                "description": "Read the bible in Bahasa Indonesia (tb)",
                "parameters": [
                    {
                        "name": "book",
                        "in": "path",
                        "type": "string",
                        "required": true
                    },
                    {
                        "name": "chapter",
                        "in": "path",
                        "type": "number",
                        "required": true
                    },
                    {
                        "name": "version",
                        "in": "path",
                        "type": "string"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Detail of Passage",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "verses": {
                                    "type": "object",
                                    "properties": {
                                        "verse": {
                                            "type": "number",
                                            "example": 1,
                                            "description": "Specific verse"
                                        },
                                        "content": {
                                            "type": "string",
                                            "example": "TUHAN, gembalaku yang baik",
                                            "description": "Content of verse"
                                        }
                                    }
                                },
                                "book": {
                                    "type": "array",
                                    "example": "[Mazmur, TB]",
                                    "description": "Book Chapter and Version"
                                },
                                "chapter": {
                                    "type": "number",
                                    "example": 23,
                                    "description": "Book chapter"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/find/{book}": {
            "get": {
                "tags": [
                    "Find"
                ],
                "description": "Find the book data",
                "parameters": [
                    {
                        "name": "book",
                        "in": "path",
                        "type": "string",
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Detailed Book Data",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "book": {
                                    "type": "string",
                                    "example": "Kejadian",
                                    "description": "The specific passage"
                                },
                                "total_verse": {
                                    "type": "number",
                                    "example": 3,
                                    "description": "Verses Count"
                                },
                                "verses": {
                                    "type": "array",
                                    "example": "[1,2,3]",
                                    "description": "Array of verses"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}